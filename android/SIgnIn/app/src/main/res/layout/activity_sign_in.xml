<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0279d7"
        android:minHeight="200dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/staff_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="某某某"
                android:textColor="#f4f4f4"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/department_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="某某某"
                android:textColor="#f4f4f4" />

            <TextView
                android:id="@+id/position_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="某某某"
                android:textColor="#f4f4f4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center|right">

            <LinearLayout
                android:id="@+id/sign_in_finger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/finger_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/finger"
                    android:tint="#fff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sign_in_face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/face_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/face"
                    android:tint="#fff" />
            </LinearLayout>


            <ImageView
                android:id="@+id/sign_in_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/home"
                android:tint="#fff" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/radius_bg_4">

                    <ImageView
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="64dp"
                        android:layout_height="44dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/morning" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="145dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上午打卡"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:background="#eee"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/morning_start"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="上班时间  xx:xx:xx" />

                                <TextView
                                    android:id="@+id/my_morning_start"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="打卡时间 xx:xx:xx" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/dk_morning_start"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/morning_end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="下班时间  xx:xx:xx" />

                                <TextView
                                    android:id="@+id/my_morning_end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="打卡时间 xx:xx:xx" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/dk_morning_end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/radius_bg_4">

                    <ImageView
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="64dp"
                        android:layout_height="44dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/afternoon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="145dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="下午打卡"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:background="#eee"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/afternoon_start"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="上班时间 xx:xx:xx" />

                                <TextView
                                    android:id="@+id/my_afternoon_start"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="打卡时间 xx:xx:xx" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/dk_afternoon_start"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/afternoon_end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="下班时间 xx:xx:xx" />

                                <TextView
                                    android:id="@+id/my_afternoon_end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="打卡时间 xx:xx:xx" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/dk_afternoon_end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/radius_bg_4">

                    <ImageView
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="64dp"
                        android:layout_height="44dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/night" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="145dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="晚上打卡"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:background="#eee"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/night_start"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="上班时间 xx:xx:xx" />

                                <TextView
                                    android:id="@+id/my_night_start"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="打卡时间 xx:xx:xx" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/dk_night_start"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/night_end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="下班时间 xx:xx:xx" />

                                <TextView
                                    android:id="@+id/my_night_end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="打卡时间 xx:xx:xx" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/dk_night_end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/login_out"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#0078d7"
            android:gravity="center"
            android:text="注销"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>
